    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "ConsoleChatGPT",
            "request": "launch",
            "mainClass": "com.plexpt.chatgpt.ConsoleChatGPT",
            "projectName": "chatgpt"
        },
        {
            "name": "Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args": [
                "--config",
                "../../config.yaml",
                "--gcp-credentials-path",
                "../../googleauth.json"
            ]
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }
    ]
}